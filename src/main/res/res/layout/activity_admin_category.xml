<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Admin.AdminCategoryActivity"
    >

    <TextView
        android:id="@+id/logo_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/logo_category"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/meals_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/meals"
            />
        <ImageView
            android:id="@+id/fast_foods_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/fast_food"
            />
        <ImageView
            android:id="@+id/drinks_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/drinks"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1_category_layout"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/laptop_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/laptop"
            />
        <ImageView
            android:id="@+id/smartphone_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/smartphone"
            />
        <ImageView
            android:id="@+id/watches_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/watches"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear2_category_layout"
        android:gravity="center"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/bag_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/bag"
            />
        <ImageView
            android:id="@+id/shoes_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/shoes"
            />
        <ImageView
            android:id="@+id/clothes_image"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/clothes"
            />
    </LinearLayout>

    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_orders_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Maintain Products"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textAllCaps="false" />
  </RelativeLayout>